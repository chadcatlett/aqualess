\f0\fs16 \cf0 \
\pard\tx3780\li400\ql\qnatural

\f2\fs22 \cf0 export PAGER=aless	
\f0\fs24 (for bash)
\f2\fs22 \
\pard\tx1440\tx2880\tx4320\tx5760\tx7200\ql\qnatural

\f0\fs16 \cf0 \
\pard\tx1440\tx2880\tx4320\tx5760\tx7200\ql\qnatural

